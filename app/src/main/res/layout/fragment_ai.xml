    <ImageView
        android:id="@+id/temanAiRobo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="144dp"
        android:src="@drawable/teman_ai_handshup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/capt_teman_ai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/teman_ai_capt"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/temanAiRobo"/>

    <Button
        android:id="@+id/btn_scan_soal"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/component_button_blue03"
        android:text="@string/btn_scan_soal"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capt_teman_ai"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>